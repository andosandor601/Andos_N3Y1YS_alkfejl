{% extends 'mainlayout' %}
 
 {% block content %}
 <div class="row">
  {% for category in categories %}
   <div class="col-md-4 col-sm-6">
     <div class="panel panel-default">
       <div class="panel-heading">
         {{ category.name}}
         <span class="label label-warning pull-right">Összes megtekintése</span>
       </div>
       <ul class="list-group">
         {% for blogs in category.topBlogs %}
         <li class="list-group-item">
           {{ blogs.title }}
         </li>
         {% endfor %}
       </ul>
     </div>
   </div>
   {% endfor %}
</div>
 {% endblock %}
   