{% extends 'mainlayout' %}

{% block content %}

<h2>{{ blog.title }}</h2>
<p>{{ blog.category.name }}</p>
<h3>Leírás</h3>
<pre>
{{ blog.text }}
</pre>

{% if currentUser.id == blog.user_id %}
<a class="btn btn-primary" href="/blog/{{blog.id}}/edit" role="button">Szerkeszt</a>
<a class="btn btn-danger" href="/blog/{{blog.id}}/delete" role="button">Töröl</a>
{% endif %}

{% endblock %}